% The University of Sydney Color Scheme
\definecolor{MasterBrandRed}{RGB}{206, 17, 38}
\definecolor{MasterBrandBlue}{RGB}{18, 65, 108}
\definecolor{MasterBrandYellow}{RGB}{249, 183, 44}
\definecolor{MasterBrandSupportYellow}{RGB}{251, 205, 107}
\colorlet{TitlePageBlack}{Black!90}
\definecolor{Arts}{RGB}{60, 182, 206}
%Arts 100%, 75% and 50% and 20% tint info page
%White or 90% black on title page
\definecolor{Business}{RGB}{0, 47, 95}
%Business 100%, 75% and 50% and 20% tint info page
%White is the only text color on title page
\definecolor{Pharmacy}{RGB}{112, 144, 183}
%PHAR 100%, 75% and 50% and 30% tint info page
%White or 90% black on title page
\definecolor{Science}{RGB}{227, 114, 34}
%Science 100%, 75% and 50% and 20% tint info page
%White or 90% black on title page
\definecolor{University}{RGB}{18, 65, 108}

\mode<presentation>
\setbeamercolor*{palette primary}{use=structure,fg=white,bg=Faculty}
\setbeamercolor*{palette secondary}{use=structure,fg=white,bg=MasterBrandRed}
%% The tertiary palette sets the color for the line across the top
\setbeamercolor*{palette tertiary}{use=structure,fg=white,bg=MasterBrandBlue}
\setbeamercolor*{palette quaternary}{fg=white,bg=MasterBrandYellow}
\setbeamercolor*{sidebar}{use=structure,bg= MasterBrandYellow}
  
\setbeamercolor*{palette sidebar primary}{use=structure,fg=structure.fg!10}
\setbeamercolor*{palette sidebar secondary}{fg=white}
\setbeamercolor*{palette sidebar tertiary}{use=structure,fg=structure.fg!50}
\setbeamercolor*{palette sidebar quaternary}{fg=white}

\setbeamercolor*{titlelike}{use=structure,fg= MasterBrandBlue}
% If you want a background color for the title
%\setbeamercolor{frametitle}{bg=yellow!90!orange} 
%\setbeamercolor{frametitle right}{bg=yellow!60!orange}

\setbeamercolor*{separation line}{}
\setbeamercolor*{fine separation line}{}



\setbeamercolor{alerted text}{fg=MasterBrandRed} % Beamer-Color/-Font 
%\setbeamertemplate{alerted text begin}{\textbf} % Beamer-Template
%\setbeamertemplate{alerted text end} % Beamer-Template

%% General blocks
\setbeamercolor{block title}{use=structure,fg=FacultyText,bg=Faculty!50}
\setbeamercolor{block body}{parent=normal text,use=block title,bg=Faculty!20}
\newcommand\inlineblock[2]{\colorbox{Faculty!50}{\textcolor{FacultyText}{#1}\vphantom{#2}}\colorbox{Faculty!20}{#2\vphantom{#1}}}


%% Example blocks
\setbeamercolor{block title example}{use=example text,fg=white,bg= MasterBrandYellow}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg= MasterBrandYellow!20}
\newcommand\inlineexample[2]{\colorbox{MasterBrandYellow}{\textcolor{white}{#1}\vphantom{#2}}\colorbox{MasterBrandYellow!20}{#2\vphantom{#1}}}

%% Alert blocks
\setbeamercolor{block title alerted}{use=alerted text,fg=white,bg=MasterBrandRed}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=MasterBrandRed!20}
\newcommand\inlinealert[2]{\colorbox{MasterBrandRed}{\textcolor{white}{#1}\vphantom{#2}}\colorbox{MasterBrandRed!20}{#2\vphantom{#1}}}

\setbeamercolor{enumerate item}{fg= MasterBrandBlue} 
\setbeamercolor{enumerate subitem}{fg= MasterBrandBlue} 
\setbeamercolor{enumerate subsubitem}{fg= MasterBrandBlue}  
\setbeamercolor{itemize item}{fg= MasterBrandBlue}  
\setbeamercolor{itemize subitem}{fg= MasterBrandBlue}  
\setbeamercolor{itemize subsubitem}{fg= MasterBrandBlue} 
\setbeamercolor{description item}{fg= MasterBrandBlue}  

\setbeamercolor{caption name}{fg= MasterBrandBlue}  


\setbeamercolor{button}{fg = white,bg = Faculty}
\setbeamercolor{hbutton border}{fg = Faculty}

\setbeamercolor{qed symbol}{fg = black, bg=black}

\setbeamercolor{section in toc}{fg = MasterBrandBlue}
\setbeamercolor{section in toc shaded}{fg = MasterBrandBlue}
\setbeamercolor{subsection in toc}{fg = MasterBrandBlue} % Beamer-Template/-Color/-Font 
\setbeamercolor{subsection in toc shaded}{fg = MasterBrandBlue} % Beamer-Template/-Color/-Font 
\setbeamercolor{subsubsection in toc}{fg = MasterBrandBlue} % Beamer-Template/-Color/-Font 
\setbeamercolor{subsubsection in toc shaded}{fg = MasterBrandBlue} % Beamer-Template/-Color/-Font 
\mode
<all>
